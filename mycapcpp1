//As there is space of submitting only one link in the mapcap app , Im combining the two tasks
#include <iostream>
using namespace std;
main()
{
    char a;
    int b;
    float c;
    double d,e,f;
    cout<<"Size of char is: "<<sizeof(a)<<" byte \n";
    cout<<"Size of int is: "<<sizeof(b)<<" bytes \n";
    cout<<"Size of float is: "<<sizeof(c)<<" bytes \n";
    cout<<"Size of double is: "<<sizeof(d)<<" bytes \n\n\n\n\n\n";
  cout<<"Enter 2 Numbers:";
  cin>>d>>e;
  f=d*e;
  cout<<"Product of 2 numbers is:"<<f;

}
